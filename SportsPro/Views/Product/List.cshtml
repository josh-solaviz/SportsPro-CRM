@model List<Product>
@{ ViewBag.Title = "Product Manager"; }

<h1>Product Manager</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th class="headerSortDown" style="text-align:center">Code</th>
            <th class="headerSortDown" style="text-align:center">Name</th>
            <th style="text-align:center">Price</th>
            <th style="text-align:center">Release Date</th>
            <th style="text-align:center">Modify</th>
            <th style="text-align:center">Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {

<tr>
    <td style="text-align:center">@product.ProductCode</td>
    <td style="text-align:center">@product.Name</td>
    <td style="text-align:center">@product.YearlyPrice.ToString("C", new System.Globalization.CultureInfo("en-US"))</td>
    <td style="text-align:center">@product.ReleaseDate.ToShortDateString()</td>
    <td style="text-align:center">
        <a asp-action="Edit"
           asp-route-id="@product.ProductID"
           class="btn btn-info" style="box-shadow: 0px 0px 3px 0px black">Edit</a>
    </td>
    <td style="text-align:center">
        <a asp-action="Delete"
           asp-route-id="@product.ProductID"
           class="btn btn-danger" style="box-shadow: 0px 0px 3px 0px black">Delete</a>
    </td>
</tr>}
    </tbody>
</table>

<a asp-action="Add" class="btn btn-success" style="box-shadow: 0px 0px 3px 0px black">Add Product</a>