@model List<Technician>
@{
    ViewBag.Title = "Technician Manager";
}

<h1>@ViewBag.Title</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="text-align:center">Name</th>
            <th style="text-align:center">Email</th>
            <th style="text-align:center">Phone</th>
            <th style="text-align:center">Modify</th>
            <th style="text-align:center">Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var technician in Model)
        {
            <tr>
                <td style="text-align:center">@technician.Name</td>
                <td style="text-align:center">@technician.Email</td>
                <td style="text-align:center">@technician.Phone</td>
                <td style="text-align:center">
                    <a asp-action="Edit"
                       asp-route-id="@technician.TechnicianID"
                       class="btn btn-info" style="box-shadow: 0px 0px 3px 0px black;">Edit</a>
                </td>
                <td style="text-align:center">
                    <a asp-action="Delete"
                       asp-route-id="@technician.TechnicianID"
                       class="btn btn-danger" style="box-shadow: 0px 0px 3px 0px black;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-success" style="box-shadow: 0px 0px 3px 0px black;">Add Technician</a>