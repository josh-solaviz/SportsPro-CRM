@model List<Customer>
@{
    ViewBag.Title = "Customer Manager";
}

<h1>@ViewBag.Title</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="text-align:center">Name</th>
            <th style="text-align:center">Email</th>
            <th style="text-align:center">City</th>
            <th style="text-align:center">Modify</th>
            <th style="text-align:center">Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td style="text-align:center">@customer.FirstName @customer.LastName</td>
            <td style="text-align:center">@customer.Email</td>
            <td style="text-align:center">@customer.City</td>
            <td style="text-align:center">
                <a asp-action="Edit"
                   asp-route-id="@customer.CustomerID"
                   class="btn btn-info" style="box-shadow: 0px 0px 3px 0px black">Edit</a>
            </td>
            <td style="text-align:center">
                <a asp-action="Delete"
                   asp-route-id="@customer.CustomerID"
                   class="btn btn-danger" style="box-shadow: 0px 0px 3px 0px black">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-success" style="box-shadow: 0px 0px 3px 0px black">Add Customer</a>